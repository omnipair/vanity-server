# Vanity Server Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# Server Configuration
# =============================================================================
# Server port (default: 8080)
VANITY_PORT=8080

# Log level (trace, debug, info, warn, error)
RUST_LOG=info

# Enable backtrace for debugging
RUST_BACKTRACE=1

# =============================================================================
# Required Grinding Parameters
# =============================================================================
# NOTE: Base pubkey must be provided as a query parameter in the API request
# Example: /grind?base=3tJrAXnjofAw8oskbMaSo9oMAYuzdBgVbW3TvQLdMEBd

# Owner pubkey for grinding (required)
VANITY_DEFAULT_TOKEN_PROGRAM=TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA

# =============================================================================
# Optional Grinding Parameters
# =============================================================================
# Target prefix for vanity addresses
# VANITY_DEFAULT_PREFIX=MyApp

# Target suffix for vanity addresses
# VANITY_DEFAULT_SUFFIX=omni

# Number of CPU threads (0 = auto-detect)
VANITY_DEFAULT_CPUS=0

# Case insensitive matching (true/false)
VANITY_DEFAULT_CASE_INSENSITIVE=false

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum grinding timeout in seconds (default: 300 = 5 minutes)
VANITY_GRIND_TIMEOUT=300

# =============================================================================
# CORS Configuration
# =============================================================================
# CORS allowed origins (comma-separated list or single domain)
# If not set, CORS will be permissive (allow all origins)
# Examples:
#   Single domain: VANITY_CORS_ORIGINS=http://localhost:3000
#   Multiple domains: VANITY_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# VANITY_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
