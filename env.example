# Vanity Server Configuration
# Copy this file to .env and modify as needed

# Server port (default: 8080)
VANITY_PORT=8080

# Default grinding parameters (required for /grind endpoint)

# Default base pubkey for grinding
VANITY_DEFAULT_BASE=3tJrAXnjofAw8oskbMaSo9oMAYuzdBgVbW3TvQLdMEBd

# Default owner pubkey for grinding
VANITY_DEFAULT_OWNER=TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA

# Default prefix for grinding (optional)
# VANITY_DEFAULT_PREFIX=MyApp

# Default suffix for grinding (optional)
# VANITY_DEFAULT_SUFFIX=omni

# Default number of CPU threads (0 = auto-detect)
VANITY_DEFAULT_CPUS=0

# Default case sensitivity (true/false)
VANITY_DEFAULT_CASE_INSENSITIVE=false

# Grinding timeout in seconds (default: 300 = 5 minutes)
# VANITY_TASK_TIMEOUT=300

# Log level (trace, debug, info, warn, error)
# VANITY_LOG_LEVEL=info

# Enable CORS for web applications
# VANITY_ENABLE_CORS=true

# CORS allowed origins (comma-separated)
# VANITY_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
